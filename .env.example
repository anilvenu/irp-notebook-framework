# Production Database Configuration used by docker-compose
DB_NAME=irp_db
DB_USER=irp_user
DB_PASSWORD=irp_pass
DB_SERVER=postgres
DB_PORT=5432

# Risk Modeler Configuration
RISK_MODELER_BASE_URL=https://api-euw1.rms-ppe.com
RISK_MODELER_API_KEY=apikey
RISK_MODELER_RESOURCE_GROUP_ID=your_group_id

# MSSQL/SQL Server Configuration
# ODBC Driver settings
MSSQL_DRIVER=ODBC Driver 18 for SQL Server
MSSQL_TRUST_CERT=yes
MSSQL_TIMEOUT=30

# DATABRIDGE connection (example)
MSSQL_DATABRIDGE_SERVER=your-server.database.windows.net
MSSQL_DATABRIDGE_USER=your_username
MSSQL_DATABRIDGE_PASSWORD=your_password
# MSSQL_DATABRIDGE_PORT=1433  # Optional, defaults to 1433

# ASSURANT connection (example)
MSSQL_ASSURANT_SERVER=your-server.database.windows.net
MSSQL_ASSURANT_USER=your_username
MSSQL_ASSURANT_PASSWORD=your_password
# MSSQL_ASSURANT_PORT=1433  # Optional, defaults to 1433

# SQL Server workspace EDM configuration
DATABRIDGE_SQL_WORKSPACE_EDM=WORKSPACE_EDM_uXJm

# System Configuration
SYSTEM_USER=analyst
LOG_LEVEL=INFO

